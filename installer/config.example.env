PORT=80

# Symetrix control target ("hub" DSP)
DSP_HUB_IP=192.168.1.50
DSP_HUB_PORT=48631

# Activity timestamp used to gate auto-updates (optional)
ACTIVITY_FILE=/var/lib/wlcb-mixer/last_activity_epoch


# --- DSP connectivity (Phase 0: reachability only) ----------------------------
# JSON array of DSP targets (for Engineering page)
DSP_TARGETS_JSON='[{"id": "aec", "name": "Radius AEC (Engineering)", "ip": "10.101.0.12"}, {"id": "a1", "name": "Radius 12x8 #1 (Studio A)", "ip": "10.101.1.2"}, {"id": "a2", "name": "Radius 12x8 #2 (Studio A - future)", "ip": "10.101.1.3", "disabled": true}, {"id": "b1", "name": "Radius 12x8 #3 (Studio B)", "ip": "10.101.2.2"}]'
# TCP port used for reachability probe (default 80)
DSP_PROBE_PORT=80


# --- Metering (Phase 1: Engineering DSP read-only meters) --------------------
# Map of DSP target id -> list of meter controllers to push/monitor.
# You assign controller numbers in Symetrix Composer (Controller Manager).
DSP_METER_MAP_JSON='{"aec": [{"id": "vu_program", "label": "Program", "controller": 9001}, {"id": "vu_rec", "label": "Record", "controller": 9002}, {"id": "vu_stream", "label": "Stream", "controller": 9003}, {"id": "vu_phones", "label": "Phones", "controller": 9004}]}'
# Push interval (ms) for meter updates. Symetrix default is 100ms; we default to 200ms.
DSP_METER_PUSH_INTERVAL_MS=200
# Push threshold (0-65535). Larger reduces update spam. Default 50 for meters.
DSP_METER_PUSH_THRESHOLD=50
